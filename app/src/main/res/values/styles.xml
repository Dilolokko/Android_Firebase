<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">#000000</item>
    </style>

    <!-- Giriş/Kayıt İşlemleri İçin Gerekli Stiller -->
    <style name="basliklar">
        <item name="android:textSize">@dimen/basliklar</item>
        <item name="android:paddingBottom">@dimen/baslikpaddingbottom</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <!-- /Giriş/Kayıt İşlemleri İçin Gerekli Stiller -->

    <!-- Genel Buton Stilleri -->
    <style name="butonlar">
        <item name="android:textSize">@dimen/butonlar</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/butonarkaplanlari</item>
    </style>
    <!-- /Genel Buton Stilleri -->


    <!-- Garson Sayfasında gelen masa Butonlarının Görünümü -->
    <style name="garsonMasaSecim" parent="android:Widget.Button">
        <item name="android:textColor">#ffffff</item>
    </style>
    <!-- /Garson Sayfasında gelen masa Butonlarının Görünümü -->

    <!-- Giriş Ekranı Listeleme -->
    <style name="girismenuliste">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/girismenuliste</item>
    </style>
    <!-- /Giriş Ekranı Listeleme -->
</resources>
